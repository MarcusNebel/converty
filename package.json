{
  "name": "converty",
  "private": true,
  "version": "1.0.0",
  "author": "Marcus Nebel",
  "description": "Converty â€“ Datei-Konvertierungs-App",
  "main": "main.js",
  "type": "module",
  "build": {
    "appId": "com.marcusnebel.converty",
    "productName": "Converty",
    "icon": "public/icon.png",
    "asarUnpack": [
      "preload.js",
      "**/node_modules/@ffmpeg-installer/**",
      "**/node_modules/adm-zip/**"
    ],
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "bin/**/*"
    ],
    "extraResources": [
      {
        "from": "bin/",
        "to": "bin",
        "filter": ["**/*"]
      }
    ]
  },
  "scripts": {
    "dev": "vite",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "clean": "rimraf dist",
    "build-app": "npm run clean && npm run build && electron-builder",
    "build": "tsc -b && vite build"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "adm-zip": "^0.5.16",
    "fluent-ffmpeg": "^2.1.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  }
}
